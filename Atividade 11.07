#include <stdio.h>

int main() {
    float celsius, fahrenheit;

    printf("Insira a temperatura em graus Celsius: ");
    scanf("%f", &celsius);

    fahrenheit = (9.0 * celsius + 160)/5;

    printf("A temperatura em Fahrenheit é: %.2f\n", fahrenheit);
    return 0;
}

