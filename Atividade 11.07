#include <stdio.h>

int main() {
    float celsius, fahrenheit;

    printf("Insira a temperatura em graus Fahrenheit: ");
    scanf("%f", &fahrenheit);

    celsius = ((fahrenheit - 32) * 5.0)/9.0;

    printf("A temperatura em Celsius é: %.2f\n", celsius);
    return 0;
}

